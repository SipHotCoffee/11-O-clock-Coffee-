<UserControl x:Class="CG.Test.Editor.Views.SpinButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:views="clr-namespace:CG.Test.Editor.Views"
             mc:Ignorable="d" 
             Width="auto" Height="auto">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <TextBox Grid.Column="0" x:Name="PART_ValueTextBox" Text="{Binding RelativeSource={RelativeSource AncestorType={x:Type views:SpinButton}}, Path=Value}" VerticalContentAlignment="Center" VerticalAlignment="Stretch"/>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <RepeatButton x:Name="PART_IncrementButton" Grid.Row="0" FontFamily="{StaticResource SymbolFont}" Content="&#xE70E;" Click="IncrementButton_Click"/>
            <RepeatButton x:Name="PART_DecrementButton" Grid.Row="1" FontFamily="{StaticResource SymbolFont}" Content="&#xE70D;" Click="DecrementButton_Click"/>
        </Grid>
    </Grid>
</UserControl>
