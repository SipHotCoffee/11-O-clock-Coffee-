        <Grid Grid.Row="2" Grid.ColumnSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Content="Apply To This" IsDefault="True" Margin="6, 6, 3, 6" CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}}" Command="{Binding ApplyToThisCommand}" />
            <Button Grid.Column="1" Content="Apply To All"                   Margin="3, 6, 3, 6" CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}}" Command="{Binding ApplyToAllCommand}"  />
            <Button Grid.Column="2" Content="Cancel"        IsCancel="True"  Margin="3, 5, 6, 6"/>
