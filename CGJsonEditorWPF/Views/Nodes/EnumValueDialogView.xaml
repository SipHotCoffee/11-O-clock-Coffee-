<editor:CustomWindow x:Class="CG.Test.Editor.Views.Nodes.EnumValueDialogView"
                     xmlns:editor="clr-namespace:CG.Test.Editor"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                     xmlns:local="clr-namespace:CG.Test.Editor.Views.Nodes" 
                     xmlns:viewmodels="clr-namespace:CG.Test.Editor.ViewModels"
                     mc:Ignorable="d"
                     Title="EnumValueDialog" Height="auto" Width="400" SizeToContent="Height" MinimizeButtonVisibility="Collapsed" MaximizeButtonVisibility="Collapsed" WindowStartupLocation="CenterScreen" IsHorizontallyResizable="False" IsVerticallyResizable="False">
    <StackPanel>
        <TextBlock Text="Select Enumeration Item: " Margin="5, 5, 5, 2.5"/>
        <ComboBox Margin="5, 2.5, 5, 5" SelectedItem="{Binding SelectedMember}" ItemsSource="{Binding EnumType.Members}"/>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <Button Grid.Column="0" Margin="5, 5, 2.5, 5" Content="OK"     IsDefault="True" Command="{Binding OkCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}}"/>
            <Button Grid.Column="1" Margin="2.5, 5, 5, 5" Content="Cancel" IsCancel="True"/>
        </Grid>
        
    </StackPanel>
</editor:CustomWindow>
