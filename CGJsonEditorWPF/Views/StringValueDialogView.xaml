<editor:CustomWindow x:Class="CG.Test.Editor.Json.Dialogs.StringValueDialogView"
        xmlns:editor="clr-namespace:CG.Test.Editor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CG.Test.Editor.Json.Dialogs" xmlns:viewmodels="clr-namespace:CG.Test.Editor.ViewModels" 
        mc:Ignorable="d"
        Height="auto" Width="400" SizeToContent="Height" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" MinimizeButtonVisibility="Collapsed" MaximizeButtonVisibility="Collapsed" ShowInTaskbar="False" Loaded="CustomWindow_Loaded">
    <Window.DataContext>
        <viewmodels:StringValueDialogViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <TextBlock Margin="4, 4, 2, 4" Text="{Binding Label}" VerticalAlignment="Center"/>
        <TextBox x:Name="_textBox" Grid.Column="1" VerticalContentAlignment="Center" Margin="2, 4, 4, 4" Text="{Binding Text}"/>

        <Grid Grid.Row="1" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button    
                    Grid.Column="0" 
                    Content="OK"     
                    Margin="6, 6, 3, 6" 
                    IsDefault="True" 
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}}" Command="{Binding OkCommand}"/>
            
            <Button Grid.Column="1" Content="Cancel" Margin="3, 6, 6, 6" IsCancel="True"/>
        </Grid>
    </Grid>
</editor:CustomWindow>
