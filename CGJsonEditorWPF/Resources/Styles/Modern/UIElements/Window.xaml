<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:editor="clr-namespace:CG.Test.Editor">

    <FontFamily x:Key="SymbolFont">pack://application:,,,/Resources/Fonts/Segoe Fluent Icons.ttf#Segoe Fluent Icons</FontFamily>

    <SolidColorBrush x:Key="Window.Active.Background"         Color="{StaticResource Background}"/>
    <SolidColorBrush x:Key="Window.Active.Foreground"         Color="{StaticResource Foreground}"/>
    <SolidColorBrush x:Key="Window.Active.Border"             Color="{StaticResource Control3}" Opacity="0.5"/>
    <SolidColorBrush x:Key="Window.Active.InvertedForeground" Color="{StaticResource Background}"/>

    <SolidColorBrush x:Key="Window.Active.Foreground.Disabled" Color="{StaticResource DisabledForeground}"/>

    <SolidColorBrush x:Key="Separator.Background" Color="{StaticResource Control3}"/>


    <SolidColorBrush x:Key="CloseButton.Normal.Background" Color="{StaticResource Red2}"/>
    <LinearGradientBrush x:Key="CloseButton.Normal.Border" StartPoint="0, 0" EndPoint="0, 1">
        <LinearGradientBrush.GradientStops>
            <GradientStop Color="{StaticResource Red5}" Offset="0.05"/>
            <GradientStop Color="{StaticResource Red3}" Offset="0.1"/>
        </LinearGradientBrush.GradientStops>
    </LinearGradientBrush>

    <SolidColorBrush x:Key="CloseButton.MouseOver.Background" Color="{StaticResource Red3}"/>
    <LinearGradientBrush x:Key="CloseButton.MouseOver.Border" StartPoint="0, 0" EndPoint="0, 1">
        <LinearGradientBrush.GradientStops>
            <GradientStop Color="{StaticResource Red7}" Offset="0.05"/>
            <GradientStop Color="{StaticResource Red4}" Offset="0.1"/>
        </LinearGradientBrush.GradientStops>
    </LinearGradientBrush>

    <SolidColorBrush x:Key="CloseButton.Pressed.Background" Color="{StaticResource Red1}"/>
    <SolidColorBrush x:Key="CloseButton.Pressed.Border"     Color="{StaticResource Red2}"/>

    <SolidColorBrush x:Key="CloseButton.Disabled.Background" Color="{StaticResource Red3}"/>
    <SolidColorBrush x:Key="CloseButton.Disabled.Border"     Color="{StaticResource Red3}"/>

    <Style TargetType="{x:Type GridSplitter}">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>

    <Style x:Key="CloseButtonStyle" TargetType="{x:Type Button}">
        <Setter Property="Background"      Value="{StaticResource CloseButton.Normal.Background}"/>
        <Setter Property="BorderBrush"     Value="{StaticResource CloseButton.Normal.Border}"/>
        <Setter Property="Foreground"      Value="{StaticResource Window.Active.Foreground}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="4" 
                        Padding="8"
                        SnapsToDevicePixels="True">
                        <ContentPresenter x:Name="_contentPresenter"
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center"
                                    Content="{TemplateBinding Content}"/>
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background"  Value="{StaticResource CloseButton.MouseOver.Background}"/>
                            <Setter Property="BorderBrush" Value="{StaticResource CloseButton.MouseOver.Border}"/>
                        </Trigger>

                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background"  Value="{StaticResource CloseButton.Pressed.Background}"/>
                            <Setter Property="BorderBrush" Value="{StaticResource CloseButton.Pressed.Border}"/>
                        </Trigger>

                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Background"  Value="{StaticResource CloseButton.Disabled.Background}"/>
                            <Setter Property="BorderBrush" Value="{StaticResource CloseButton.Disabled.Border}"/>
                            <Setter Property="Foreground"  Value="{StaticResource Window.Active.Foreground.Disabled}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <editor:WindowToBorderVisibilityConverter x:Key="WindowToBorderVisibilityConverter"/>

    <Style x:Key="BaseWindowStyle" TargetType="{x:Type editor:CustomWindow}">
        <Setter Property="Background"  Value="{StaticResource Window.Active.Background}"/>
        <Setter Property="Foreground"  Value="{StaticResource Window.Active.Foreground}"/>
        <Setter Property="BorderBrush" Value="{StaticResource Window.Active.Border}"/>

        <Setter Property="BorderThickness" Value="1"/>

        <Setter Property="WindowStyle" Value="None"/>

        <Setter Property="ResizeMode" Value="NoResize"/>

        <Setter Property="FontSize" Value="14"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type editor:CustomWindow}">
                    <Grid>
                        <Border x:Name="ColorBorder"
                            Background="{TemplateBinding Background}"
				            BorderThickness="{TemplateBinding BorderThickness}"
				            BorderBrush="{TemplateBinding BorderBrush}" CornerRadius="8"/>

                        <Border x:Name="ImageBorder" Background="{TemplateBinding Background}" CornerRadius="8" Opacity="0.0"/>
                        <Border x:Name="ControlBorder" Background="Transparent">
                            <Grid x:Name="WindowGrid">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>

                                <Border x:Name="TitleBar" 
                                    Grid.Column="1" 
                                    Grid.Row="1" 
                                    Background="Transparent" 
                                    Height="40">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="auto"/>
                                            <ColumnDefinition Width="auto"/>
                                            <ColumnDefinition Width="auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock VerticalAlignment="Center" Margin="5" FontSize="16" Text="{TemplateBinding Title}"/>

                                        <Button x:Name="MinimizeButton" Padding="4" Grid.Column="2" Margin="3" Width="{Binding RelativeSource={RelativeSource Mode=Self}, Path=ActualHeight}" FontFamily="{StaticResource SymbolFont}" Content="&#xE921;"/>
                                        <Button x:Name="MaximizeButton" Padding="4" Grid.Column="3" Margin="3" Width="{Binding RelativeSource={RelativeSource Mode=Self}, Path=ActualHeight}" FontFamily="{StaticResource SymbolFont}" Content="&#xE922;"/>
                                        <Button x:Name="CloseButton"    Padding="4" Grid.Column="4" Margin="3" Width="{Binding RelativeSource={RelativeSource Mode=Self}, Path=ActualHeight}" FontFamily="{StaticResource SymbolFont}" Content="&#xE8BB;" Style="{StaticResource CloseButtonStyle}"/>
                                    </Grid>
                                </Border>

                                <Border Grid.Column="0" Grid.Row="2" x:Name="ResizeW" Width ="4" Background="Transparent" Cursor="SizeWE"/>
                                <Border Grid.Column="1" Grid.Row="0" x:Name="ResizeN" Height="4" Background="Transparent" Cursor="SizeNS"/>
                                <Border Grid.Column="2" Grid.Row="2" x:Name="ResizeE" Width ="4" Background="Transparent" Cursor="SizeWE"/>
                                <Border Grid.Column="1" Grid.Row="3" x:Name="ResizeS" Height="4" Background="Transparent" Cursor="SizeNS"/>

                                <Border Grid.Column="0" Grid.Row="0" x:Name="ResizeNW" Width="4" Height="4" Background="Transparent" Cursor="SizeNWSE"/>
                                <Border Grid.Column="2" Grid.Row="0" x:Name="ResizeNE" Width="4" Height="4" Background="Transparent" Cursor="SizeNESW"/>
                                <Border Grid.Column="0" Grid.Row="3" x:Name="ResizeSW" Width="4" Height="4" Background="Transparent" Cursor="SizeNESW"/>
                                <Border Grid.Column="2" Grid.Row="3" x:Name="ResizeSE" Width="4" Height="4" Background="Transparent" Cursor="SizeNWSE"/>

                                <ContentPresenter Grid.Column="1" Grid.Row="2" Content="{TemplateBinding Content}"/>
                            </Grid>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <MultiTrigger>
                            <MultiTrigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="ImageBorder" Storyboard.TargetProperty="Opacity" From="0.0" To="0.25" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </MultiTrigger.EnterActions>
                            <MultiTrigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="ImageBorder" Storyboard.TargetProperty="Opacity" From="0.25" To="0.0" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </MultiTrigger.ExitActions>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsMicaBackgroundEnabled" Value="True"/>
                                <Condition Property="IsActive" Value="True"/>
                            </MultiTrigger.Conditions>
                            <!--<Setter TargetName="ImageBorder" Property="Visibility" Value="Visible"/>-->
                        </MultiTrigger>
                        <Trigger Property="WindowState" Value="Maximized">
                            <Setter TargetName="ImageBorder"   Property="CornerRadius" Value="0"/>
                            <Setter TargetName="ColorBorder"   Property="CornerRadius" Value="0"/>
                            <Setter TargetName="ControlBorder" Property="CornerRadius" Value="0"/>

                            <Setter TargetName="ResizeW" Property="Visibility" Value="Collapsed"/>
                            <Setter TargetName="ResizeN" Property="Visibility" Value="Collapsed"/>
                            <Setter TargetName="ResizeE" Property="Visibility" Value="Collapsed"/>
                            <Setter TargetName="ResizeS" Property="Visibility" Value="Collapsed"/>

                            <Setter TargetName="ResizeNW" Property="Visibility" Value="Collapsed"/>
                            <Setter TargetName="ResizeNE" Property="Visibility" Value="Collapsed"/>
                            <Setter TargetName="ResizeSW" Property="Visibility" Value="Collapsed"/>
                            <Setter TargetName="ResizeSE" Property="Visibility" Value="Collapsed"/>

                            <Setter Property="BorderThickness" Value="0"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--<Style x:Key="BaseWindowStyle" TargetType="{x:Type Window}">
        <Setter Property="Background" Value="{StaticResource Window.Active.Background}"/>
        <Setter Property="Foreground" Value="{StaticResource Window.Active.Foreground}"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>-->

    <Style TargetType="{x:Type editor:CustomWindow}" BasedOn="{StaticResource BaseWindowStyle}"/>

    <Style TargetType="{x:Type ContentControl}">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource Window.Active.Foreground}"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ContentControl}">
                    <Border CornerRadius="4" Padding="5" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter Content="{TemplateBinding Content}" ContentTemplate="{TemplateBinding ContentTemplate}" ContentTemplateSelector="{TemplateBinding ContentTemplateSelector}"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type Popup}">
        <Setter Property="AllowsTransparency" Value="True"/>
    </Style>

    <Style TargetType="{x:Type Separator}">
        <Setter Property="Background" Value="{StaticResource Separator.Background}"/>
    </Style>

    <Style TargetType="{x:Type Label}">
        <Setter Property="Foreground" Value="{StaticResource Window.Active.Foreground}"/>
    </Style>

</ResourceDictionary>