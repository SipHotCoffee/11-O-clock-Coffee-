<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Window.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <SolidColorBrush x:Key="CheckBox.Normal.Background" Color="{DynamicResource Control2}"/>
    <SolidColorBrush x:Key="CheckBox.Normal.Border"     Color="{DynamicResource Control4}"/>

    <SolidColorBrush x:Key="CheckBox.MouseOver.Background" Color="{DynamicResource Control4}"/>
    <SolidColorBrush x:Key="CheckBox.MouseOver.Border"     Color="{DynamicResource Control4}"/>

    <SolidColorBrush x:Key="CheckBox.Pressed.Background" Color="{DynamicResource Control1}"/>
    <SolidColorBrush x:Key="CheckBox.Pressed.Border"     Color="{DynamicResource Control4}"/>

    <SolidColorBrush x:Key="CheckBox.Checked.Background" Color="{DynamicResource Accent4}"/>
    <SolidColorBrush x:Key="CheckBox.Checked.Border"     Color="{DynamicResource Control4}"/>

    <SolidColorBrush x:Key="CheckBox.Disabled.Background" Color="{DynamicResource Control2}"/>
    <SolidColorBrush x:Key="CheckBox.Disabled.Border"     Color="Transparent"/>

    <Style TargetType="{x:Type CheckBox}">
        <Setter Property="Background"  Value="{DynamicResource CheckBox.Normal.Background}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource CheckBox.Normal.Border}"/>

        <Setter Property="HorizontalAlignment" Value="Left"/>

        <Setter Property="Foreground" Value="{DynamicResource Window.Active.Foreground}"/>

        <Setter Property="FontSize" Value="14"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type CheckBox}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0" HorizontalAlignment="Left" Width="20" Height="20">
                            <Border Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="4">
                                <TextBlock x:Name="CheckMark"
                                           SnapsToDevicePixels="True"
                                           Foreground="{DynamicResource Window.Active.Background}"
                                           VerticalAlignment="Center" 
                                           HorizontalAlignment="Center" 
                                           FontSize="16px"
                                           FontFamily="{DynamicResource SymbolFont}"
                                           FontWeight="ExtraBold"
                                           Text="&#xE73E;"
                                           TextAlignment="Center" Visibility="Collapsed"/>
                            </Border>
                        </Grid>
                        <ContentPresenter Margin="5" Grid.Column="1" Content="{TemplateBinding Content}"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background"  Value="{DynamicResource CheckBox.MouseOver.Background}"/>
                            <Setter Property="BorderBrush" Value="{DynamicResource CheckBox.MouseOver.Border}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background"  Value="{DynamicResource CheckBox.Pressed.Background}"/>
                            <Setter Property="BorderBrush" Value="{DynamicResource CheckBox.Pressed.Border}"/>
                        </Trigger>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter Property="Background"  Value="{DynamicResource CheckBox.Checked.Background}"/>
                            <Setter Property="BorderBrush" Value="{DynamicResource CheckBox.Checked.Border}"/>
                            <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Background"  Value="{DynamicResource CheckBox.Disabled.Background}"/>
                            <Setter Property="BorderBrush" Value="{DynamicResource CheckBox.Disabled.Border}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>