<frontend:CustomWindow x:Class="CG.Test.Editor.FrontEnd.Views.Dialogs.VariantTypeSelectorDialog"
					   xmlns:frontend="clr-namespace:CG.Test.Editor.FrontEnd"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       xmlns:local="clr-namespace:CG.Test.Editor.FrontEnd.Views.Dialogs"
                       mc:Ignorable="d"
                       Title="Select variant type" Height="400" Width="800" WindowStartupLocation="CenterScreen" 
					   MinimizeButtonVisibility="Collapsed" IsCloseButtonEnabled="False" DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="auto"/>
		</Grid.RowDefinitions>

		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="auto"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>

			<TextBlock Grid.Column="0"
					   HorizontalAlignment="Center" 
					   VerticalAlignment="Center"
					   Margin="5, 5, 2.5, 2.5"
					   FontSize="15" Text="&#xe721;" 
					   FontFamily="{StaticResource SymbolFont}"/>
			
			<TextBox Grid.Column="1" Margin="2.5, 5, 5, 2.5" Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
		</Grid>
		<Grid Grid.Row="1">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="auto"/>
			</Grid.ColumnDefinitions>
			<ListView Grid.Column="0" Margin="5, 5, 2.5, 2.5" ItemsSource="{Binding PossibleTypes}" SelectedIndex="0" SelectedItem="{Binding SelectedType}" SelectionMode="Single">
				<ListView.ItemTemplate>
					<DataTemplate>
						<TextBlock Text="{Binding Name}"/>
					</DataTemplate>
				</ListView.ItemTemplate>
			</ListView>

			<GroupBox Grid.Column="1" Margin="2.5, 2.5, 5, 2.5" Header="Properties">
				<ItemsControl MinWidth="150" Margin="2.5, 2.5, 5, 2.5" ItemsSource="{Binding SelectedType.Properties}">
					<ItemsControl.ItemTemplate>
						<DataTemplate>
							<TextBlock Margin="5" Text="{Binding Name}"/>
						</DataTemplate>
					</ItemsControl.ItemTemplate>
				</ItemsControl>
			</GroupBox>
		</Grid>
			
		<Button Grid.Row="2" HorizontalAlignment="Right" Width="150" Content="OK" Margin="5, 2.5, 5, 5" IsDefault="True" Click="Ok_Button_Click"/>
	</Grid>
</frontend:CustomWindow>
