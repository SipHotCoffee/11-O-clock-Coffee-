<frontend:CustomWindow x:Class="CG.Test.Editor.FrontEnd.Views.Dialogs.SearchArrayDialog"
					   xmlns:frontend="clr-namespace:CG.Test.Editor.FrontEnd"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       xmlns:local="clr-namespace:CG.Test.Editor.FrontEnd.Views.Dialogs"
                       mc:Ignorable="d"
                       Title="Search in array" Height="400" Width="400" MinimizeButtonVisibility="Collapsed" WindowStartupLocation="CenterScreen" DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<TextBox Grid.Row="0" Margin="5, 5, 5, 2.5" 
				 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>

		<ListView Grid.Row="1" Margin="5, 2.5, 5, 5" Resources="{StaticResource NodeCompactDataTemplates}" 
				  SelectedItem="{Binding SelectedNode}"
				  ItemsSource="{Binding NodeCollection}">
			<ListView.ItemContainerStyle>
				<Style TargetType="{x:Type ListViewItem}" BasedOn="{StaticResource {x:Type ListViewItem}}">
					<Setter Property="VerticalContentAlignment" Value="Center"/>
					<Setter Property="VerticalAlignment" Value="Center"/>
					<EventSetter Event="MouseDoubleClick" Handler="ArrayViewItem_MouseDoubleClick"/>
				</Style>
			</ListView.ItemContainerStyle>
		</ListView>
	</Grid>
</frontend:CustomWindow>
