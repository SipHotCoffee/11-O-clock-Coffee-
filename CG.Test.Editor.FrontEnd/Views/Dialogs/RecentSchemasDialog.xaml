<frontend:CustomWindow x:Class="CG.Test.Editor.FrontEnd.Views.Dialogs.RecentSchemasDialog"
					   xmlns:frontend="clr-namespace:CG.Test.Editor.FrontEnd"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       xmlns:local="clr-namespace:CG.Test.Editor.FrontEnd.Views.Dialogs" 
					   xmlns:converters="clr-namespace:CG.Test.Editor.FrontEnd.Converters"
					   mc:Ignorable="d"
					   DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
                       Title="Select Schema" Height="450" Width="600" WindowStartupLocation="CenterScreen">
	<Window.Resources>
		<converters:IsNotNullConverter x:Key="IsNotNullConverter"/>
	</Window.Resources>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="auto"/>
		</Grid.RowDefinitions>
		<ListView Grid.Row="0" SelectionMode="Single" Margin="5, 5, 5, 2.5" ItemsSource="{Binding RecentSchemas}" SelectedItem="{Binding SelectedSchema}">
			<ListView.ItemTemplate>
				<DataTemplate>
					<TextBlock Text="{Binding FileName}">
						<TextBlock.ContextMenu>
							<ContextMenu>
								<MenuItem Header="Remove from recent" Command="{Binding DeleteCommand}"/>
							</ContextMenu>
						</TextBlock.ContextMenu>
					</TextBlock>
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>

		<Grid Grid.Row="1">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>

			<Button x:Name="_browseButton" Grid.Column="0" Margin="5, 2.5, 2.5, 5"   Content="Browse..." Click="BrowseButton_Click"/>
			<Button x:Name="_okButton"     Grid.Column="1" Margin="2.5, 2.5, 2.5, 5" Content="OK"        Click="OkButton_Click"
					IsEnabled="{Binding SelectedSchema, Converter={StaticResource IsNotNullConverter}}"/>
			
			<Button x:Name="_cancelButton" Grid.Column="2" Margin="2.5, 2.5, 5, 5"   Content="Cancel" IsCancel="True"/>
		</Grid>
    </Grid>
</frontend:CustomWindow>
